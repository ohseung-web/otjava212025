package multiexample;

import java.util.Scanner;

public class MultiArrayEx03 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		
        int[][] arr = {
			{101, 102, 103, 104},
			{201, 202, 203, 204},
			{301, 302, 303, 304}
        }; 
        int rowTot = 0;
        int colTot = 0;
        // 문제 1) 가로 합 출력
        // 정답 1) 410, 810, 1210
        for(int i=0; i<arr.length; i++) {
        	for(int j=i; j<=i; j++) {
        		
        		rowTot += arr[i][j];
        		System.out.println("가로의 합 :"+rowTot);
        	}
        }
        
        // 문제 2) 세로 합 출력
        // 정답 2) 603, 606, 609, 612
        
	
	}
}
