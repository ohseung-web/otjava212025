package example;

import java.util.Arrays;
import java.util.Random;
import java.util.Scanner;

public class ArrayEx07 {

	public static void main(String[] args) {
		
		Scanner scan = new Scanner(System.in);
		Random ra = new Random();
		int[] answer = {1,3,4,2,5};
		int[] hgdwer = new int[5];
		String[] Errata = new String[5];
		
//		OMR카드
//		1. 배열 answer는 시험문제의 정답지이다.
//		2. 배열 hgdwer에 1~5 사이의 랜덤 숫자 5개를 저장한다.
//		3. answer와 hgdwer 값을 비교해 정오표를 출력한다.
//		4. 한 문제당 20점이다.
//		   예)
//		       answer = {1, 3, 4, 2, 5}
//		       hgdwer = {1, 1, 4, 4, 3}
//		       정오표 = {O, X, O, X, X}
//		       성적 = 40점
		
		for(int i=0; i<hgdwer.length; i++) {
			 hgdwer[i]= ra.nextInt(5)+1;
		}
		for(int i=0; i<answer.length; i++) {
			 if(answer[i]==hgdwer[i]) {
				 Errata[i]="O";
			 }else {
				 Errata[i]="X";
			 }
			
		}
		System.out.println(Arrays.toString(answer));
		System.out.println(Arrays.toString(hgdwer));
		System.out.println(Arrays.toString(Errata));
		scan.close();
	}

}
