package multiexample;

import java.util.Scanner;

public class String_example03 {

	public static void main(String[] args) {
		//문제) 사전 순으로 이름 정렬
		String[] names = {"홍길동", "김유신", "마동석", "자바킹", "서동요"};
		String minNames= null;
		
		int index = 0;
		String temp = null;
		for(int i=0; i<names.length; i++) {
			
			//최소 기본값을 정의한다.
			minNames = names[i];
			System.out.println(minNames);
			index = i;
			
			// i=0 ~ i=4까지를 현재 minNames="홍길동"과 비교한다.
			for(int j=i; j<names.length; j++) {
				// minNames.compareTo(names[j])>0의 조건은 
				// 같은 이름은 제외하는 예외처리
				if(minNames.compareTo(names[j])>0) {
					System.out.println(j+"번째 이름 :"+names[j]);
					minNames = names[j];
					index = j;
				}
			}
			temp = names[i];
			names[i]=names[index];
			names[index]=temp;
		}

		//출력
		for(int i=0; i<names.length; i++) {
			System.out.print(names[i]+" ");
		}
	}

}
